<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd" default-autowire="byName" default-lazy-init="false">

	
	<!-- 每天执行task -->		 
	<bean id="everyDayTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		 
		<property name="targetObject">
			<ref bean="jobExecuter" />
		</property>
		 
		<property name="targetMethod">
			<value>everyDay</value>
		</property>
	</bean>
	
	<!-- 每小时执行task -->	
	<bean id="erverHourTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		 
		<property name="targetObject">
			<ref bean="jobExecuter" />
		</property>
		 
		<property name="targetMethod">
			<value>everyHour</value>
		</property>
	</bean>
	<!-- 每分钟执行task -->	
	<bean id="erverMinutesTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		 
		<property name="targetObject">
			<ref bean="jobExecuter" />
		</property>
		 
		<property name="targetMethod">
			<value>everyMinutes</value>
		</property>
	</bean>
	<!-- 每月执行task -->		 
	<bean id="everyMonthTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		 
		<property name="targetObject">
			<ref bean="jobExecuter" />
		</property>
		 
		<property name="targetMethod">
			<value>everyMonth</value>
		</property>
	</bean>
	
	<!-- 每月15号的23点59分59秒执行task chenzhongwei add-->		 
	<bean id="everyMonthFifteenTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		 
		<property name="targetObject">
			<ref bean="jobExecuter" />
		</property>
		 
		<property name="targetMethod">
			<value>everyMonthFifteen</value>
		</property>
	</bean>
	

	<!-- 每天执行表达式，每晚23：30 -->
	<bean id="erverDayTime"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="everyDayTask" />
		</property>
		 
		<property name="cronExpression">
			<value>0 30 23 * * ?</value>
		</property>
	</bean>
	
	<!--  每小时执行表达式 -->
	<bean id="erverHourTime"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="erverHourTask" />
		</property>
		 
		<property name="cronExpression">
			<value>0 0 0/1 * * ?</value>
		</property>
		 
	</bean>
	<!--  每分钟执行表达式 -->
	<bean id="erverMinutesTime"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="erverMinutesTask" />
		</property>
		 
		<property name="cronExpression">
			<value>0 0/1 * * * ?</value>
		</property>
		 
	</bean>
	
	<!--  每月执行表达式 -->
	<bean id="everyMonthTime"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="everyMonthTask" />
		</property>
		 
		<property name="cronExpression">
			<value>0 1 0 1 * ?</value>
		</property>
	</bean>
	
	<!-- 每月15号的23点59分59秒执行task chenzhongwei add-->	
	<bean id="everyMonthFifteenTime"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="everyMonthFifteenTask" />
		</property>
		 
		<property name="cronExpression">
			<value>59 59 23 15 * ?</value>
		</property>
	</bean>
	
	
	<!-- 总管理类 如果将lazy-init='false'那么容器启动就会执行调度程序   -->
	<bean id="startQuertz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="erverMinutesTime" />
				<ref bean="erverDayTime" />
				<ref bean="erverHourTime" />
				<ref bean="everyMonthTime"/>
				<!-- 每月15号的23点59分59秒执行task chenzhongwei add-->	
				<ref bean="everyMonthFifteenTime"/>
			</list>
		</property>
	</bean>

</beans>
